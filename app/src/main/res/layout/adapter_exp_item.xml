<?xml version="1.0" encoding="utf-8"?>
<FrameLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="1dp"
        android:layout_marginTop="1dp"
        android:background="@android:color/white"
        android:orientation="vertical"
        android:paddingBottom="8dp"
        android:paddingLeft="24dp"
        android:paddingRight="24dp"
        android:paddingTop="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="42dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="220dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text=""
                android:singleLine="true"
                android:ellipsize="end"
                android:textColor="@color/light_black_3"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tv_waste_type"
                android:layout_width="420dp"
                android:layout_height="match_parent"
                android:text=""
                android:gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:textColor="@color/light_black_3"
                android:textSize="20sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="42dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_person_sj"
                    android:layout_width="180dp"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:textColor="@color/light_black_3"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/tv_person_hs"
                    android:layout_width="180dp"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:layout_marginStart="10dp"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:textColor="@color/light_black_3"
                    android:textSize="20sp" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_exp_type"
                android:layout_width="380dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text=""
                android:singleLine="true"
                android:ellipsize="end"
                android:textColor="#ff4444"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tv_weight_in"
                android:layout_width="220dp"
                android:layout_height="match_parent"
                android:text=""
                android:gravity="center_vertical"
                android:layout_marginStart="20dp"
                android:textColor="#ff4444"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tv_weight_2"
                android:layout_width="220dp"
                android:layout_height="match_parent"
                android:text=""
                android:gravity="center_vertical"
                android:layout_marginStart="20dp"
                android:textColor="@color/toolbar_bg_color"
                android:textSize="20sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="34dp"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:ellipsize="end"
                android:textColor="@color/light_black_9"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tv_no"
                android:layout_width="wrap_content"
                android:layout_height="34dp"
                android:gravity="center_vertical"
                android:layout_marginLeft="20dp"
                android:layout_marginStart="20dp"
                android:textColor="@color/light_black_9"
                android:textSize="18sp" />

        </LinearLayout>

    </LinearLayout>

    <FrameLayout
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:background="@drawable/ic_num_bg">

        <TextView
            android:id="@+id/tvIndex"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:textColor="#ffffff"
            android:padding="2dp"
            android:singleLine="true"
            android:gravity="center"
            android:ellipsize="end"
            android:textStyle="bold"
            android:textSize="@dimen/sp14"
            android:text="01"/>

    </FrameLayout>

</FrameLayout>